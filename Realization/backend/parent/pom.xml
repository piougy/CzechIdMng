					<exclude>module-*.properties</exclude>
				</excludes>
			</testResource>
			<testResource>
				<filtering>true</filtering>
				<directory>src/test/resources</directory>
				<includes>
					<include>application.properties</include>
					<include>application-*.properties</include>
					<include>module-*.properties</include>
				</includes>
			</testResource>
		</testResources>

	</build>
