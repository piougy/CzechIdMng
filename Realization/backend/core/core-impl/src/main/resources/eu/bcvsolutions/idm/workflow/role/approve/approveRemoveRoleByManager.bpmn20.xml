        <activiti:formProperty id="disapprove" type="decision"></activiti:formProperty>
        <activiti:formProperty id="approve" type="decision"></activiti:formProperty>
        <activiti:formProperty id="roleName" type="textField" expression="${roleService.get(conceptRole.role, null).name}" writable="false"></activiti:formProperty>
        <activiti:formProperty id="applicantDescription" type="textArea" writable="false"></activiti:formProperty>
        <activiti:formProperty id="validFrom" type="localDate" expression="${identityRoleService.get(conceptRole.identityRole, null).validFrom}" writable="false"></activiti:formProperty>
        <activiti:formProperty id="validTill" type="localDate" expression="${identityRoleService.get(conceptRole.identityRole, null).validTill}" writable="false"></activiti:formProperty>
      </extensionElements>
    </userTask>
